---
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Image from "astro/components/Image.astro";
import Hero from "../assets/contacto_hero.png";
import Facebook from "../assets/facebook.png";
import Whatsapp from "../assets/whatsapp.png";
import Instagram from "../assets/instagram.png";
---

<Layout>
  <main class="overflow-hidden">
    <Navbar />

    <!-- HERO SECTION -->
    <section class="relative w-full h-[60vh] sm:h-[70vh] md:h-screen">
      <Image
        class="w-full h-full object-cover"
        src={Hero}
        alt="Hero Contacto"
      />
      <div class="absolute inset-0 bg-black/50 z-10"></div>

      <div
        class="absolute inset-0 flex flex-col items-center justify-center text-white text-center z-20 px-6 md:px-16 pt-20 md:pt-0"
      >
        <span class="text-xs sm:text-sm uppercase tracking-widest text-blue-300 mb-2">
          CONTACTO
        </span>
        <h1 class="text-2xl sm:text-4xl md:text-6xl font-bold drop-shadow-lg leading-tight max-w-4xl">
          Enviamos un mensaje mediante cualquier plataforma
        </h1>
        <p class="text-base md:text-xl font-roboto-regular mt-4 drop-shadow-md max-w-3xl">
          Somos un equipo apasionado por transformar ideas en soluciones que
          generan valor real a empresas e industrias.
        </p>
      </div>
    </section>

    <!-- INFO SECTION -->
    <section
      id="information"
      class="py-12 md:py-16 px-6 md:px-12 lg:px-20 bg-gradient-to-br from-gray-50 to-blue-50"
    >
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-10 md:mb-12">
          <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            Información de <span class="text-blue-800">Contacto</span>
          </h2>
          <div class="w-24 h-1 bg-blue-800 mx-auto rounded-full"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
          <!-- Contacto directo -->
          <div
            class="bg-white rounded-2xl p-6 md:p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100"
          >
            <div class="flex items-center justify-center w-14 h-14 md:w-16 md:h-16 bg-blue-100 rounded-full mb-5 mx-auto">
              <svg class="w-7 h-7 md:w-8 md:h-8 text-blue-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
            </div>
            <h3 class="text-lg md:text-xl font-semibold text-gray-900 mb-3 text-center">Contáctanos</h3>
            <p class="text-gray-600 text-center mb-4 text-sm md:text-base">
              Puedes escribirnos o llamarnos directamente:
            </p>
            <div class="text-center">
              <a
                href="tel:+528448580335"
                class="inline-flex items-center justify-center px-5 py-3 bg-blue-800 text-white font-semibold rounded-full hover:bg-blue-900 transition-colors duration-300 shadow-md hover:shadow-lg text-sm md:text-base"
              >
                <svg class="w-4 h-4 md:w-5 md:h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
                +52 (844) 858-0335
              </a>
            </div>
          </div>

          <!-- Horario de atención -->
          <div
            class="bg-white rounded-2xl p-6 md:p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100"
          >
            <div class="flex items-center justify-center w-14 h-14 md:w-16 md:h-16 bg-green-100 rounded-full mb-5 mx-auto">
              <svg class="w-7 h-7 md:w-8 md:h-8 text-green-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                ></path>
              </svg>
            </div>
            <h3 class="text-lg md:text-xl font-semibold text-gray-900 mb-4 text-center">Horario de atención</h3>
            <div class="space-y-3">
              <div class="flex justify-between items-center p-3 bg-gray-50 rounded-lg">
                <span class="font-medium text-gray-700 text-sm md:text-base">Lunes a Domingo</span>
                <span class="text-green-700 font-semibold text-sm md:text-base">08:00 – 21:00</span>
              </div>
            </div>
          </div>

          <!-- Redes sociales -->
          <div
            class="bg-white rounded-2xl p-6 md:p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100 md:col-span-2 lg:col-span-1"
          >
            <div class="flex items-center justify-center w-14 h-14 md:w-16 md:h-16 bg-purple-100 rounded-full mb-5 mx-auto">
              <svg class="w-7 h-7 md:w-8 md:h-8 text-purple-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"
                ></path>
              </svg>
            </div>
            <h3 class="text-lg md:text-xl font-semibold text-gray-900 mb-4 text-center">Síguenos</h3>
            <p class="text-gray-600 text-center mb-6 text-sm md:text-base">
              Mantente conectado con nosotros
            </p>
            <div class="flex justify-center gap-4">
              <a href="https://www.facebook.com/neurovix.nv" target="_blank"
                class="flex items-center justify-center w-11 h-11 hover:scale-125 transition-transform">
                <Image src={Facebook} alt="Facebook" />
              </a>
              <a href="https://www.instagram.com/neurovix.nv/" target="_blank"
                class="flex items-center justify-center w-11 h-11 rounded-full hover:scale-125 transition-transform">
                <Image src={Instagram} alt="Instagram" />
              </a>
              <a href="https://api.whatsapp.com/send/?phone=528448580335" target="_blank"
                class="flex items-center justify-center w-11 h-11 hover:scale-125 transition-transform">
                <Image src={Whatsapp} alt="Whatsapp" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- MAPA Y FORMULARIO -->
    <section class="mt-16 md:mt-20 px-6 md:px-12 lg:px-20 flex flex-col lg:flex-row gap-10 md:gap-12 mb-10">
      <!-- Mapa -->
      <div class="w-full lg:w-1/2">
        <iframe
          class="w-full h-56 sm:h-72 lg:h-96 rounded-xl shadow-md"
          src="https://www.google.com/maps/embed?pb=!1m17!1m12!1m3!1d3603.1875124187563!2d-100.94679092548705!3d25.4319938221522!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m2!1m1!2zMjXCsDI1JzU1LjIiTiAxMDDCsDU2JzM5LjIiVw!5e0!3m2!1sen!2smx!4v1749279395663!5m2!1sen!2smx"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
        ></iframe>
      </div>

      <!-- Formulario -->
      <div class="w-full lg:w-1/2">
        <h2 class="text-xl md:text-2xl font-semibold mb-6">Formulario de contacto</h2>
        <form
          action="https://api.web3forms.com/submit"
          method="POST"
          class="space-y-4"
        >
          <input type="hidden" name="access_key" value="39bfccfa-f50e-4534-bdff-9ed17d6da6fb" />

          <div class="flex flex-col sm:flex-row gap-4">
            <input
              type="text"
              name="nombres"
              placeholder="Nombre(s)"
              class="flex-1 border border-gray-300 rounded-lg px-4 py-2 text-sm md:text-base"
            />
            <input
              type="text"
              name="apellidos"
              placeholder="Apellido(s)"
              class="flex-1 border border-gray-300 rounded-lg px-4 py-2 text-sm md:text-base"
            />
          </div>

          <input
            type="email"
            name="email"
            placeholder="Correo electrónico"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 text-sm md:text-base"
          />

          <select
            name="asunto"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 text-sm md:text-base"
          >
            <option value="">Selecciona un asunto</option>
            <option value="cotizacion">Cotización</option>
            <option value="demo">Solicitar un demo</option>
          </select>

          <textarea
            name="mensaje"
            placeholder="Tu mensaje"
            class="w-full border border-gray-300 rounded-lg px-4 py-2 h-28 md:h-32 resize-none text-sm md:text-base"
          ></textarea>

          <button
            type="submit"
            class="w-full bg-blue-800 text-white py-3 rounded-lg hover:bg-blue-900 transition-colors font-semibold"
          >
            Enviar mensaje
          </button>
        </form>
      </div>
    </section>

    <Footer />
  </main>
</Layout>
