---
import Image from "astro/components/Image.astro";
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main>
    <!-- NAVBAR SECTION -->
    <Navbar />

    <!-- HERO SECTION -->
    <section
      class="bg-black text-white w-full flex flex-col md:flex-row items-center px-6 md:px-20 lg:px-44 py-16 md:py-24 lg:py-32 gap-10 md:gap-8"
    >
      <div class="w-full md:w-5/6 text-center md:text-left">
        <h1
          class="text-3xl md:text-4xl lg:text-5xl font-extrabold leading-tight"
        >
          Cuentanos sobre tu proyecto
        </h1>
      </div>
    </section>

    <!-- CONTENT SECTION -->
    <section class="px-6 md:px-12 lg:px-20">

      <!-- CONTACT OPTIONS ROW -->
      <div class="w-full flex flex-col sm:flex-row items-start gap-8 py-12 md:py-15">
        <div class="w-full sm:w-2/3">
          <Image
            src="/edit.png"
            alt="EDIT ICON"
            width={55}
            height={10}
            class="p-3 bg-gray-300 rounded-xl"
          />
          <h1 class="font-bold text-xl mt-5 mb-3">Escribanos</h1>
          <p>
            Llene el siguiente formulario y le responderemos en menos de 24
            horas laborales.
          </p>
        </div>
        <div class="w-full sm:w-1/3">
          <Image
            src="/call.png"
            alt="CALL ICON"
            width={50}
            height={10}
            class="p-3 bg-gray-300 rounded-xl"
          />
          <h1 class="font-bold text-xl mt-5 mb-3">Llamenos</h1>
          <p>
            Estamos disponibles en el{" "}
            <a href="tel:528448580335" class="underline font-bold">
              +52 (844) 858-0335
            </a>{" "}
            en un horario de 08:00 a 20:00 de lunes a domingo
          </p>
        </div>
      </div>

      <!-- FORM + CALENDAR ROW -->
      <div class="w-full flex flex-col lg:flex-row gap-10 mb-16">

        <!-- FORM COLUMN -->
        <div class="w-full lg:w-2/3">
          <Image
            src="/white_logo.png"
            alt="NEUROVIX WHITE LOGO"
            width={230}
            height={10}
            class="mx-auto"
          />
          <form
            class="mt-10"
            action="https://api.web3forms.com/submit"
            method="POST"
          >
            <input
              type="hidden"
              name="access_key"
              value="39bfccfa-f50e-4534-bdff-9ed17d6da6fb"
            />

            <!-- Nombre + Apellido -->
            <div class="w-full flex flex-col sm:flex-row gap-4">
              <div class="w-full sm:w-1/2 flex flex-col">
                <label for="name">
                  Nombre<span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  name="name"
                  id="name"
                  required
                  class="bg-gray-200 pl-3 py-2 rounded-lg border border-gray-300 w-full sm:w-[90%] focus:outline-none focus:ring-2 focus:ring-blue-400"
                />
              </div>
              <div class="w-full sm:w-1/2 flex flex-col">
                <label for="apellido">
                  Apellido<span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  name="apellido"
                  id="apellido"
                  required
                  class="bg-gray-200 pl-3 py-2 rounded-lg border border-gray-300 w-full sm:w-[90%] focus:outline-none focus:ring-2 focus:ring-blue-400"
                />
              </div>
            </div>

            <!-- Empresa + Cargo -->
            <div class="w-full flex flex-col sm:flex-row gap-4 mt-4">
              <div class="w-full sm:w-1/2 flex flex-col">
                <label for="empresa">
                  Nombre de la empresa<span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  name="empresa"
                  id="empresa"
                  required
                  class="bg-gray-200 pl-3 py-2 rounded-lg border border-gray-300 w-full sm:w-[90%] focus:outline-none focus:ring-2 focus:ring-blue-400"
                />
              </div>
              <div class="w-full sm:w-1/2 flex flex-col">
                <label for="cargo">
                  Cargo<span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  name="cargo"
                  id="cargo"
                  required
                  class="bg-gray-200 pl-3 py-2 rounded-lg border border-gray-300 w-full sm:w-[90%] focus:outline-none focus:ring-2 focus:ring-blue-400"
                />
              </div>
            </div>

            <!-- Email + Telefono -->
            <div class="w-full flex flex-col sm:flex-row gap-4 mt-4">
              <div class="w-full sm:w-1/2 flex flex-col">
                <label for="email">
                  Correo electronico<span class="text-red-500">*</span>
                </label>
                <input
                  type="email"
                  name="email"
                  id="email"
                  required
                  class="bg-gray-200 pl-3 py-2 rounded-lg border border-gray-300 w-full sm:w-[90%] focus:outline-none focus:ring-2 focus:ring-blue-400"
                />
              </div>
              <div class="w-full sm:w-1/2 flex flex-col">
                <label for="telefono">
                  Telefono<span class="text-red-500">*</span>
                </label>
                <input
                  type="tel"
                  name="telefono"
                  id="telefono"
                  required
                  class="bg-gray-200 pl-3 py-2 rounded-lg border border-gray-300 w-full sm:w-[90%] focus:outline-none focus:ring-2 focus:ring-blue-400"
                />
              </div>
            </div>

            <!-- Mensaje -->
            <div class="w-full flex flex-col mt-4">
              <label for="mensaje">
                Mensaje<span class="text-red-500">*</span>
              </label>
              <textarea
                name="mensaje"
                id="mensaje"
                required
                class="bg-gray-200 pl-3 py-2 rounded-lg border border-gray-300 w-full h-32 resize-none focus:outline-none focus:ring-2 focus:ring-blue-400"
              ></textarea>
            </div>

            <button
              type="submit"
              class="px-6 py-3 rounded-xl bg-blue-500 hover:bg-blue-700 active:scale-95 transition-all text-white font-bold mt-4 w-full sm:w-auto"
            >
              ENVIAR
            </button>
          </form>
        </div>

        <!-- CALENDAR COLUMN -->
        <div class="w-full lg:w-1/3">
          <Image
            src="/black_calendar.png"
            alt="BLACK CALENDAR ICON"
            width={60}
            height={10}
            class="p-3 bg-gray-300 rounded-xl"
          />
          <h1 class="font-bold text-xl mt-5 mb-3">Agenda una reunion</h1>
          <p class="font-light">
            Consulte nuestro calendario para reservar un espacio para platicar
            sobre su proyecto
          </p>
        </div>
      </div>
    </section>

    <!-- FOOTER SECTION -->
    <Footer />
  </main>
</Layout>