    <!-- Scripts -->
    <script>
        // State management
        let currentStep = 1;
        const totalSteps = 3;

        // Elements
        const progressBar = document.getElementById('progress-bar');
        const steps = {
            1: document.getElementById('step1'),
            2: document.getElementById('step2'),
            3: document.getElementById('step3')
        };
        const stepIndicators = {
            1: document.getElementById('step1-indicator'),
            2: document.getElementById('step2-indicator'),
            3: document.getElementById('step3-indicator')
        };
        const connectors = {
            1: document.getElementById('connector1'),
            2: document.getElementById('connector2')
        };

        // Mobile menu
        const mobileMenuBtn = document.getElementById('mobile-menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        
        if (mobileMenuBtn && mobileMenu) {
            mobileMenuBtn.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        }

        // Update progress
        function updateProgress() {
            const progress = ((currentStep - 1) / (totalSteps - 1)) * 100;
            progressBar.style.width = progress + '%';
        }

        // Update step indicators
        function updateStepIndicators() {
            Object.keys(stepIndicators).forEach(step => {
                const stepNum = parseInt(step);
                const indicator = stepIndicators[step];
                
                if (stepNum < currentStep) {
                    // Completed step
                    indicator.classList.remove('bg-gray-300', 'text-gray-600', 'bg-red-600');
                    indicator.classList.add('bg-green-600', 'text-white');
                    indicator.innerHTML = '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path></svg>';
                } else if (stepNum === currentStep) {
                    // Current step
                    indicator.classList.remove('bg-gray-300', 'text-gray-600', 'bg-green-600');
                    indicator.classList.add('bg-red-600', 'text-white');
                    indicator.textContent = step;
                } else {
                    // Future step
                    indicator.classList.remove('bg-red-600', 'bg-green-600');
                    indicator.classList.add('bg-gray-300', 'text-gray-600');
                    indicator.textContent = step;
                }
            });

            // Update connectors
            if (currentStep > 1) {
                connectors[1].classList.remove('bg-gray-300');
                connectors[1].classList.add('bg-green-600');
            }
            if (currentStep > 2) {
                connectors[2].classList.remove('bg-gray-300');
                connectors[2].classList.add('bg-green-600');
            }
        }

        // Show step
        function showStep(stepNumber) {
            // Hide all steps
            Object.values(steps).forEach(step => {
                if (step) step.classList.add('hidden');
            });
            
            // Show current step
            if (steps[stepNumber]) {
                steps[stepNumber].classList.remove('hidden');
                steps[stepNumber].classList.add('slide-in');
            }
            
            currentStep = stepNumber;
            updateProgress();
            updateStepIndicators();
            
            // Scroll to top of form
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Step 1: Continue
        document.getElementById('continue-step1')?.addEventListener('click', () => {
            showStep(2);
        });

        // Step 2: Back
        document.getElementById('back-step2')?.addEventListener('click', () => {
            showStep(1);
        });

        // Step 2: Continue (with validation)
        document.getElementById('continue-step2')?.addEventListener('click', () => {
            const email = document.getElementById('email-verify').value;
            const password = document.getElementById('password-verify').value;
            const errorDiv = document.getElementById('verification-error');

            if (!email || !password) {
                errorDiv.textContent = 'Por favor completa todos los campos requeridos.';
                errorDiv.classList.remove('hidden');
                document.getElementById('verification-form').classList.add('shake');
                setTimeout(() => {
                    document.getElementById('verification-form').classList.remove('shake');
                }, 500);
                return;
            }

            // Simulate validation (in production, this would be an API call)
            if (email.length < 5 || password.length < 6) {
                errorDiv.classList.remove('hidden');
                document.getElementById('verification-form').classList.add('shake');
                setTimeout(() => {
                    document.getElementById('verification-form').classList.remove('shake');
                }, 500);
            } else {
                errorDiv.classList.add('hidden');
                showStep(3);
            }
        });

        // Toggle password visibility
        document.getElementById('toggle-password')?.addEventListener('click', () => {
            const passwordInput = document.getElementById('password-verify');
            const type = passwordInput.type === 'password' ? 'text' : 'password';
            passwordInput.type = type;
        });

        // Step 3: Back
        document.getElementById('back-step3')?.addEventListener('click', () => {
            showStep(2);
        });

        // Step 3: Check all confirmations
        const checkboxes = ['checkbox1', 'checkbox2', 'checkbox3', 'checkbox4'];
        const confirmationText = document.getElementById('confirmation-text');
        const deleteBtn = document.getElementById('delete-account-btn');

        function checkDeleteEnabled() {
            const allChecked = checkboxes.every(id => document.getElementById(id)?.checked);
            const textCorrect = confirmationText.value === 'ELIMINAR MI CUENTA';
            
            if (deleteBtn) {
                deleteBtn.disabled = !(allChecked && textCorrect);
            }
        }

        checkboxes.forEach(id => {
            document.getElementById(id)?.addEventListener('change', checkDeleteEnabled);
        });

        confirmationText?.addEventListener('input', checkDeleteEnabled);

        // Final delete action
        document.getElementById('delete-account-btn')?.addEventListener('click', () => {
            const allChecked = checkboxes.every(id => document.getElementById(id)?.checked);
            const textCorrect = confirmationText.value === 'ELIMINAR MI CUENTA';
            const errorDiv = document.getElementById('final-error');
            const errorMessage = document.getElementById('final-error-message');

            if (!allChecked) {
                errorMessage.textContent = 'Debes confirmar todas las casillas antes de continuar.';
                errorDiv.classList.remove('hidden');
                return;
            }

            if (!textCorrect) {
                errorMessage.textContent = 'Debes escribir exactamente "ELIMINAR MI CUENTA" para confirmar.';
                errorDiv.classList.remove('hidden');
                confirmationText.classList.add('shake');
                setTimeout(() => {
                    confirmationText.classList.remove('shake');
                }, 500);
                return;
            }

            // Show confirmation dialog
            if (confirm('¿Estás completamente seguro? Esta acción NO se puede deshacer.')) {
                // Simulate API call to delete account
                deleteBtn.disabled = true;
                deleteBtn.innerHTML = '<svg class="animate-spin h-5 w-5 mx-auto" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>';
                
                setTimeout(() => {
                    // Hide all steps
                    Object.values(steps).forEach(step => {
                        if (step) step.classList.add('hidden');
                    });
                    
                    // Show success message
                    const successMessage = document.getElementById('success-message');
                    successMessage.classList.remove('hidden');
                    successMessage.classList.add('slide-in');
                    
                    // Update progress to 100%
                    progressBar.style.width = '100%';
                    progressBar.classList.remove('bg-red-600');
                    progressBar.classList.add('bg-green-600');
                    
                    // Countdown and redirect
                    let countdown = 10;
                    const countdownElement = document.getElementById('countdown');
                    const countdownInterval = setInterval(() => {
                        countdown--;
                        countdownElement.textContent = countdown;
                        if (countdown <= 0) {
                            clearInterval(countdownInterval);
                            window.location.href = '/apps/alra';
                        }
                    }, 1000);
                }, 2000);
            }
        });

        // Initialize
        updateProgress();
        updateStepIndicators();
    </script>
