<style>
  /* ============================================
     GLOBAL & VARIABLES
  ============================================ */
  @import url('https://fonts.googleapis.com/css2?family=Syne:wght@400;500;600;700;800&family=DM+Sans:ital,wght@0,300;0,400;0,500;1,300&display=swap');

  :root {
    --bg: #080C14;
    --bg2: #0D1420;
    --accent: #00C8FF;
    --accent2: #7B5EA7;
    --accent3: #00FF88;
    --text: #E8EDF5;
    --muted: #6B7A99;
    --border: rgba(255,255,255,0.07);
    --card-bg: rgba(13, 20, 32, 0.8);
    --font-head: 'Syne', sans-serif;
    --font-body: 'DM Sans', sans-serif;
  }

  * { box-sizing: border-box; margin: 0; padding: 0; }

  .proyectos-main {
    background: var(--bg);
    color: var(--text);
    font-family: var(--font-body);
    overflow-x: hidden;
  }

  /* ============================================
     HERO
  ============================================ */
  .hero {
    min-height: 85vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    text-align: center;
    padding: 120px 24px 80px;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .grid-overlay {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(0,200,255,0.04) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0,200,255,0.04) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse 80% 60% at 50% 50%, black 30%, transparent 100%);
  }

  .glow {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.18;
  }

  .glow-1 {
    width: 600px; height: 600px;
    background: var(--accent);
    top: -200px; left: -100px;
  }

  .glow-2 {
    width: 500px; height: 500px;
    background: var(--accent2);
    bottom: -150px; right: -100px;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 780px;
  }

  .eyebrow {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--accent);
    border: 1px solid rgba(0,200,255,0.3);
    padding: 6px 16px;
    border-radius: 100px;
    margin-bottom: 28px;
    background: rgba(0,200,255,0.06);
  }

  .hero h1 {
    font-family: var(--font-head);
    font-size: clamp(2.4rem, 6vw, 4.2rem);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin-bottom: 24px;
    color: #fff;
  }

  .highlight {
    background: linear-gradient(135deg, var(--accent), var(--accent2));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-sub {
    font-size: 1.1rem;
    line-height: 1.7;
    color: var(--muted);
    max-width: 580px;
    margin: 0 auto 40px;
  }

  .cta-btn {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    background: linear-gradient(135deg, var(--accent), #0099CC);
    color: #000;
    font-family: var(--font-head);
    font-weight: 700;
    font-size: 0.9rem;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    padding: 14px 32px;
    border-radius: 6px;
    text-decoration: none;
    transition: transform 0.2s, box-shadow 0.2s;
    box-shadow: 0 0 30px rgba(0,200,255,0.3);
  }

  .cta-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 50px rgba(0,200,255,0.5);
  }

  .cta-btn.large {
    font-size: 1rem;
    padding: 18px 40px;
  }

  .scroll-hint {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    color: var(--muted);
    font-size: 0.7rem;
    letter-spacing: 0.15em;
    text-transform: uppercase;
  }

  .scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, var(--accent), transparent);
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @keyframes scrollPulse {
    0%, 100% { opacity: 0.3; transform: scaleY(1); }
    50% { opacity: 1; transform: scaleY(1.2); }
  }

  /* ============================================
     PROJECTS SECTION
  ============================================ */
  .projects-section {
    padding: 40px 0 100px;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 40px;
  }

  /* Project Card */
  .project-card {
    position: relative;
    margin-bottom: 32px;
    border: 1px solid var(--border);
    border-radius: 20px;
    background: var(--card-bg);
    backdrop-filter: blur(20px);
    overflow: hidden;
    transition: border-color 0.3s, transform 0.3s;
  }

  .project-card::before {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent, var(--accent), transparent);
    opacity: 0;
    transition: opacity 0.3s;
  }

  .project-card:hover {
    border-color: rgba(0,200,255,0.25);
    transform: translateY(-4px);
  }

  .project-card:hover::before {
    opacity: 1;
  }

  .project-card.alt::before {
    background: linear-gradient(90deg, transparent, var(--accent2), transparent);
  }

  .project-card.alt:hover {
    border-color: rgba(123,94,167,0.3);
  }

  .card-inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 480px;
  }

  .project-card.alt .card-inner {
    direction: rtl;
  }

  .project-card.alt .card-inner > * {
    direction: ltr;
  }

  .card-left {
    padding: 56px 48px 48px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .card-right {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px;
    background: rgba(255,255,255,0.02);
    border-left: 1px solid var(--border);
  }

  .project-card.alt .card-right {
    border-left: none;
    border-right: 1px solid var(--border);
  }

  .project-number {
    font-family: var(--font-head);
    font-size: 4rem;
    font-weight: 800;
    color: rgba(255,255,255,0.04);
    line-height: 1;
    margin-bottom: 16px;
    letter-spacing: -0.04em;
  }

  .project-badge {
    display: inline-block;
    font-size: 0.68rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    padding: 4px 12px;
    border-radius: 100px;
    margin-bottom: 12px;
  }

  .project-badge.mobile { background: rgba(0,255,136,0.1); color: var(--accent3); border: 1px solid rgba(0,255,136,0.25); }
  .project-badge.web { background: rgba(0,200,255,0.1); color: var(--accent); border: 1px solid rgba(0,200,255,0.25); }
  .project-badge.special { background: rgba(255,100,100,0.1); color: #FF8A8A; border: 1px solid rgba(255,100,100,0.25); }
  .project-badge.corporate { background: rgba(123,94,167,0.1); color: #B48DE0; border: 1px solid rgba(123,94,167,0.25); }

  .project-title {
    font-family: var(--font-head);
    font-size: clamp(1.8rem, 3vw, 2.6rem);
    font-weight: 800;
    letter-spacing: -0.02em;
    line-height: 1.1;
    color: #fff;
    margin-bottom: 6px;
  }

  .project-client {
    font-size: 0.85rem;
    color: var(--muted);
    margin-bottom: 20px;
    font-style: italic;
  }

  .project-desc {
    font-size: 0.95rem;
    line-height: 1.75;
    color: #9AA5BE;
    margin-bottom: 28px;
  }

  .project-desc strong { color: #C8D5F0; font-weight: 500; }
  .project-desc em { color: var(--accent); font-style: normal; }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 24px;
  }

  .tech-tag {
    font-size: 0.72rem;
    font-weight: 500;
    letter-spacing: 0.06em;
    padding: 5px 12px;
    border-radius: 6px;
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.1);
    color: var(--text);
    transition: background 0.2s;
  }

  .tech-tag:hover {
    background: rgba(0,200,255,0.1);
    border-color: rgba(0,200,255,0.2);
    color: var(--accent);
  }

  .deploy-info {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.8rem;
    color: var(--muted);
    border-top: 1px solid var(--border);
    padding-top: 20px;
  }

  /* ============================================
     PROJECT VISUALS
  ============================================ */

  /* ALRA Visual */
  .alra-visual {
    width: 100%;
    display: flex;
    justify-content: center;
  }

