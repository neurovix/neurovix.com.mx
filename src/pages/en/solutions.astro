---
import NavbarSP from "../../components/NavbarSP.astro";
import Layout from "../../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import Hero from "../../assets/soluciones_hero.png";
import FooterEn from "../../components/FooterEn.astro";

import KimberlyClark from "../../assets/companies/kimberly-clark.png";
import AGMaquinado from "../../assets/companies/ag_maquinado.webp";
import AlraPlastic from "../../assets/companies/alra_plastic.png";
import MbsConstrucciones from "../../assets/companies/mbs_construcciones.webp";
import SuperMarket from "../../assets/companies/supermarket-ml.png";

// Scalable array: just add more logos here ...
const clientes = [
  { src: KimberlyClark, alt: "Kimberly Clark", href: "/empresas/kimberly" },
  { src: SuperMarket, alt: "Super Market ML", href: "/empresas/supermarketml" },
  { src: AGMaquinado, alt: "A | G Maquinado", href: "" },
  { src: AlraPlastic, alt: "Alra Plastic Reciclyng", href: "" },
  { src: MbsConstrucciones, alt: "MBS Construcciones", href: "" },
];
---

<Layout>
  <main class="font-roboto-regular">
    <NavbarSP />

    <section class="relative w-full h-screen">
      <Image
        class="w-full h-full object-cover"
        src={Hero}
        alt="Solutions Hero"
      />
      <div class="absolute inset-0 bg-black/50 z-10"></div>
      <div
        class="mt-28 absolute inset-0 flex flex-col items-center justify-center text-white text-center z-20 px-4"
      >
        <span class="text-sm uppercase tracking-widest text-blue-300 mb-2"
          >Solutions by Industry</span
        >
        <h1 class="text-4xl md:text-6xl font-bold drop-shadow-lg">
          Technology that adapts to your sector
        </h1>
        <p
          class="text-lg md:text-xl font-roboto-regular mt-4 drop-shadow-md max-w-3xl"
        >
          We automate processes, improve efficiency and create intelligent
          solutions specific to your industry.
        </p>
      </div>
    </section>

    <!-- Section: Solutions by industry -->
    <section
      id="sectores"
      class="bg-white py-20 px-6 md:px-20 text-gray-900 font-roboto-regular"
    >
      <div class="max-w-7xl mx-auto text-center">
        <h2 class="text-4xl font-bold mb-4">
          Solutions adapted to your industry
        </h2>
        <p class="text-lg text-gray-700 max-w-3xl mx-auto mb-12">
          Whether you're in manufacturing, healthcare, education or another
          sector, we help you solve real problems with real technology:
          automation, artificial intelligence and custom development.
        </p>

        <!-- Section: Our clients -->
        <div class="overflow-hidden relative w-full">
          <div class="flex w-max animate-scroll-left gap-12 items-center">
            {
              [...clientes, ...clientes].map(({ src, alt, href }, index) => (
                <div class="shrink-0 h-24 sm:h-28 md:h-32 px-6 flex items-center justify-center bg-white">
                  <a href={href} class="h-full flex items-center">
                    <img
                      src={src.src}
                      alt={alt}
                      class="h-full max-w-[160px] object-contain"
                      loading="lazy"
                    />
                  </a>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <style>
        @keyframes scroll-left {
          0% {
            transform: translateX(0);
          }
          100% {
            transform: translateX(-50%);
          }
        }

        .animate-scroll-left {
          animation: scroll-left 25s linear infinite;
        }

        .animate-scroll-left:hover {
          animation-play-state: paused;
        }
      </style>

      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 text-left mt-10"
      >
        <div
          class="bg-blue-50 p-6 rounded-2xl shadow hover:shadow-lg transition"
        >
          <h3 class="text-xl font-bold mb-2">Manufacturing</h3>
          <p class="text-sm mb-4">
            Automate reports, quality control and real-time production.
          </p>
        </div>
        <div
          class="bg-blue-50 p-6 rounded-2xl shadow hover:shadow-lg transition"
        >
          <h3 class="text-xl font-bold mb-2">Healthcare</h3>
          <p class="text-sm mb-4">
            Smart scheduling, automatic reminders and patient bots.
          </p>
        </div>
        <div
          class="bg-blue-50 p-6 rounded-2xl shadow hover:shadow-lg transition"
        >
          <h3 class="text-xl font-bold mb-2">Education</h3>
          <p class="text-sm mb-4">
            Custom platforms, assessment automation and attendance.
          </p>
        </div>
        <div
          class="bg-blue-50 p-6 rounded-2xl shadow hover:shadow-lg transition"
        >
          <h3 class="text-xl font-bold mb-2">Logistics and Transportation</h3>
          <p class="text-sm mb-4">
            Optimized routes, controlled deliveries and real-time tracking.
          </p>
        </div>
        <div
          class="bg-blue-50 p-6 rounded-2xl shadow hover:shadow-lg transition"
        >
          <h3 class="text-xl font-bold mb-2">Commerce and Retail</h3>
          <p class="text-sm mb-4">
            Chatbots, automated inventory and intelligent billing.
          </p>
        </div>
        <div
          class="bg-blue-50 p-6 rounded-2xl shadow hover:shadow-lg transition"
        >
          <h3 class="text-xl font-bold mb-2">Public Sector</h3>
          <p class="text-sm mb-4">
            Digitize procedures, use AI for citizen service and staff control.
          </p>
        </div>
      </div>
    </section>
  </main>

  <!-- Section: Custom solutions -->
  <section
    class="bg-blue-900 text-white py-20 px-6 md:px-20 text-center font-roboto-regular"
  >
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">
        We create custom solutions for your company
      </h2>
      <p class="text-lg md:text-xl mb-8 text-blue-100">
        Does your company have unique processes or face specific challenges? We
        can help you develop a completely customized solution that adapts to
        your workflows, systems and vision.
      </p>
      <a
        href="/en/contact"
        class="px-6 py-3 bg-white text-blue-900 rounded-lg font-bold hover:bg-gray-200 transition"
      >
        LET'S TALK ABOUT YOUR PROJECT
      </a>
    </div>
  </section>

  <FooterEn />
</Layout>
