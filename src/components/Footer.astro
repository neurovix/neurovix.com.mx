---
import Image from "astro/components/Image.astro";

const currentYear = new Date().getFullYear();
---

<footer class="bg-white px-6 md:px-12 lg:px-20 py-10 border-t-2 border-black">
  <Image src="/white_logo.png" alt="NEUROVIX LOGO" width={160} height={10} class="w-36 md:w-44 lg:w-[200px]" />

  <!-- Links + Redes sociales -->
  <div class="w-full flex flex-col md:flex-row items-center mt-8 gap-6 md:gap-0">
    <!-- Links de navegación -->
    <div class="w-full md:w-2/3 flex flex-wrap justify-center md:justify-start gap-x-4 gap-y-2">
      <a class="hover:underline" href="/sobre_nosotros">Acerca</a>
      <a href="/servicios" class="hover:underline">Servicios</a>
      <a href="/proyectos" class="hover:underline">Proyectos</a>
      <a class="hover:underline" href="">Blog</a>
      <a href="" class="hover:underline">Bolsa de Trabajo</a>
      <a class="hover:underline" href="/contacto">Contactanos</a>
    </div>
    <!-- Iconos de redes sociales -->
    <div class="w-full md:w-1/3 flex flex-row items-center justify-center md:justify-end gap-3 flex-wrap">
      <a href="https://facebook.com/neurovix.nv" target="_blank">
        <Image class="" src="/icons/facebook.png" alt="FACEBOOK ICON" width={30} height={10} />
      </a>
      <a href="https://instagram.com/neurovix.nv" target="_blank">
        <Image src="/icons/instagram.png" alt="INSTAGRAM ICON" width={30} height={10} />
      </a>
      <a href="">
        <Image class="" src="/icons/linkedin.png" alt="LINKEDIN ICON" width={30} height={10} />
      </a>
      <a href="">
        <Image src="/icons/tiktok.png" alt="TIKTOK ICON" width={30} height={10} />
      </a>
      <a href="">
        <Image src="/icons/youtube.png" alt="YOUTUBE ICON" width={30} height={10} />
      </a>
      <a href="">
        <Image class="" src="/icons/x.png" alt="X ICON" width={30} height={10} />
      </a>
    </div>
  </div>

  <h1 class="text-center mt-8 text-sm md:text-base">
    © {currentYear}
    <span class="font-bold">Neurovix</span>. Todos los derechos reservados.
  </h1>
</footer>
